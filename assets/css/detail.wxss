.position-relative {
  height: 430rpx;
}

.good {
  position: absolute;
  bottom: 5rpx;
  left: 10rpx;
  background: #fff;
  border-radius: 50px 50px 50px 0;
  padding: 6rpx 20rpx;
}

.share {
  width: 100%;
}

.share>.text-lg {
  width: 90%;
}

.saleNum::after {
  content: '|';
  padding: 0 10rpx;
}

.detailImage>.text-lg>.img-detail {
  padding-bottom: 3rpx;
  border-bottom: 1px solid #e03997;
}

.detail-footer {
  position: fixed;
  right: 0;
  bottom: 0rpx;
  left: 0;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  height: 130rpx;
  box-shadow: 0 -1px 1px -1px #e03997;
  text-align: center;
  color: #666666;
  width: 100%;
}

/* 按钮内部 */
.cu-btn {
  padding: 0 70rpx;
  margin: 0 40rpx;
}

/* 特殊 */
.special {
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
}

/* 倒计时字体样式 */
.times {
  color: var(--pink);
  background-color: var(--pinkLight);
  border-radius: 6rpx;
  padding: 0 5rpx;
}