.equity-List {
  display: flex;
  vertical-align: middle;
}

.circle {
  height: 340rpx;
}

.circle>.circle-border {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  padding: 3px;
  box-sizing: border-box;
  background-image: -webkit-linear-gradient(top, #ffb0d3 0%, #ffb0d3 30%, #f76e9c 60%, #ffb0d3 90%);
  background-image: -moz-linear-gradient(top, #ffb0d3 0%, #ffb0d3 30%, #f76e9c 60%, #ffb0d3 90%);
  background-image: linear-gradient(top, #ffb0d3 0%, #ffb0d3 30%, #f76e9c 60%, #ffb0d3 90%);
}

.circle>.circle-border>.box {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}