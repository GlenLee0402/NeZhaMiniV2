page {
  background-color: white;
}

.card-list {
  height: 170rpx;
  width: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
}

.card-bg {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.card-icon {
  width: 100rpx;
  height: 100rpx;
  border: 1px solid white;
  border-radius: 500rpx;
}

.card-list>view:last-child {
  position: absolute;
  top: 10rpx;
  right: 5rpx;
  padding: 0 15rpx;
  background-color: rgba(0, 0, 0, 0.3);
}