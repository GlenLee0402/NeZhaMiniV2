.head>view:first-child>image {
  width: 200rpx;
  height: 200rpx;
}

.head>view:nth-child(2) {
  width: 50%;
}

.head>view:nth-child(2)>view:nth-child(2) {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}

.ingList {
  width: 95%;
  margin: 0 auto;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 5rpx;
}

.chief {
  position: relative;
}

.chief::before {
  content: '团长';
  font-size: 20rpx;
  position: absolute;
  border-radius: 10rpx;
  background-color: #e03997;
  padding: 2rpx;
  width: 100%;
  color: #ffffff;
  z-index: 99;
  top: 0px;
  left: 0rpx;
}

.btn {
  margin: 20rpx 150rpx;
}